{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vite/client", "vue-router"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "vite.config.ts",
    "node_modules/vue-router/**/*"
  ]
}
